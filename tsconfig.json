{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "exclude": ["__tests__/**/*-test.ts", "node_modules"],
  "compilerOptions": {
    "strict": true,
    "useUnknownInCatchVariables": false,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "jsx": "react",
    // Path alias config
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },
    "types": ["@types/styled-components-react-native", "jest"]
  }
}
